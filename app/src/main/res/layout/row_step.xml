<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewIngredientsRecipes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/titleRecipeTextView"
    android:layout_margin="@dimen/card_margin"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner"
    app:cardElevation="@dimen/small_card_elevation">

    <TextView
        android:id="@+id/stepNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="@dimen/small_padding"
        android:padding="@dimen/extra_small_padding"
        android:text="@string/step_number"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/stepShortDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/extra_small_padding" />
</android.support.v7.widget.CardView>